<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/draw_brush_size_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_content_remove" />

    <ImageView
        android:id="@+id/draw_brush_size_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_content_add" />

    <SeekBar
        android:id="@+id/draw_brush_size_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:max="99"
        android:layout_toLeftOf="@+id/draw_brush_size_up"
        android:layout_toRightOf="@+id/draw_brush_size_down"
        android:progressDrawable="@drawable/seekbar_progress" />

</RelativeLayout>
