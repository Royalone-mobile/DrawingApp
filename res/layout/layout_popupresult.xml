<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/color_tlightgrey">

    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/color_lightlightwhite">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Add Person to Contact"
                    android:id="@+id/txt_calendarpop_title"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:textColor="@color/color_black"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    android:layout_marginLeft="30dp" />

                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/btnResultClose"
                    android:text="Ã—" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:layout_margin="10dp">


                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnBackPerson"
                    android:src="@drawable/back32"
                    android:background="@color/color_lightlightwhite"
                    android:layout_gravity="center_vertical" />

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/imgResultPerson"
                    android:src="@drawable/icon_user" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="New Text"
                    android:id="@+id/txtPersonName"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/color_black"
                    android:textSize="20sp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnNextPerson"
                    android:src="@drawable/next"
                    android:background="@color/color_lightlightwhite"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal">

                <Button
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Accept"
                    android:id="@+id/btnAcceptPerson"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/drawable_btn_whitebackgreybutton"
                    android:textColor="@color/color_black" />
                <Button
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Decline"
                    android:id="@+id/btnDeclinePerson"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/drawable_btn_whitebackgreybutton"
                    android:textColor="@color/color_black"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>
</LinearLayout>