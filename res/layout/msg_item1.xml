<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="right"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/layout_to_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:gravity="right"
        android:orientation="horizontal"
        android:padding="3dp" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/imagetoclip"
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="-1dp"
                android:src="@drawable/clipto" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/imagetoclip"
                android:background="@drawable/drawable_btn_whitebackgreentext" >

                <TextView
                    android:id="@+id/txt_to_timestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:text="New Text"
                    android:textColor="@color/color_white" />

                <TextView
                    android:id="@+id/txt_to_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="Joe"
                    android:textColor="@color/color_white" />

                <TextView
                    android:id="@+id/txt_to_message_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/txt_to_name"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0.8"
                    android:gravity="center_vertical"
                    android:maxLines="20"
                    android:singleLine="false"
                    android:text="Single line item"
                    android:textColor="@color/color_white"
                    android:textSize="16sp" />

            </RelativeLayout>

        </RelativeLayout>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/img_to_profile_item"
            android:src="@drawable/icon_user"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

</LinearLayout>